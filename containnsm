def arguments():
  parser = argparse.ArgumentParser(description='ContainNSM')
  subparsers = parser.add_subparsers(help='Types of Commands')
  
  # ./containnsm [..]
  parser.add_argument("-v", "--version", action='version', version='ContainNSM ' + VERSION)
  
  # ./containnsm list [..]
  list_parser = subparsers.add_parser("list")
  list_parser.add_argument("list", choices=['repo', 'registry'])
  
  return vars(parser.parse_args())

def main():
